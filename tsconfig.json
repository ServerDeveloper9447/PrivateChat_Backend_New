{
  "compilerOptions": {
    "target": "es2017",
    "module": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleDetection": "auto",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "allowImportingTsExtensions": true
  }
}
